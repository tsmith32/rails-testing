<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <%= f.input :name %>
  </div>
  <div class="field">
    <%= f.input :email %>
  </div>
  <div class="field">
    <%= f.association :gender, collection: Gender.all(order: 'id') %>
  </div>
  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
